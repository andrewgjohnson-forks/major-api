{% set selectedMenu = 'index' %}
{% extends 'MajorApiAppBundle:WebLayouts:default.html.twig' %}

{% block title %}QuickBooks REST API &mdash; Register Now &mdash; MajorApi{% endblock %}

{% block body %}
	<div class="mast">
		<h1>
            Your App <em>+</em> QuickBooks
            <br>
            in Five Minutes
        </h1>

        <a class="button alt fat all-caps" href="{{ path('majorapi_web_registration') }}">Get Started Now</a>

        <p class="italic">
            or <a class="alt-link" href="{{ path('majorapi_web_developers') }}">peruse the docs</a>
        </p>
	</div>


    <div class="limiter benefit easy" data-ui-benefit-block="easy">
        <h2 class="tight">We&rsquo;re as easy as plug &amp; play</h2>
        <p>
            Major is the simplest tool for integrating QuickBooks into your application.
        </p>
        <a href="{{ path('majorapi_web_registration') }}" class="button all-caps fat">Start using Major now</a>
    </div>


    <div class="limiter benefit pay" data-ui-benefit-block="pay">
