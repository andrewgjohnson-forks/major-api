{% set selectedMenu = 'pricing' %}
{% extends 'MajorApiAppBundle:WebLayouts:default.html.twig' %}

{% block title %}Major &mdash; QuickBooks REST API &mdash; Pricing{% endblock %}

{% block body %}
    <article>
        <div class="wrapper">
            <div class="clearfix limiter">
                <div class="sidebar">
                    <img src="{{ asset('bundles/majorapiapp/images/pricing-circles.jpg') }}" alt="29 dollars a month, 25 cents an invoice" class="col-3" >
                </div>

                <div class="content">
                    <h1>Pricing</h1>
                    <p>
                        MajorApi's pricing couldn't be more simple.
                    </p>
                    <p>
                        A flat $29 a month and 25&cent; per invoice, sales order, or bill created through the API. And, your first 30 days are free.
                    </p>

                    {% if not app.user %}
                        <a href="{{ path('majorapi_web_registration') }}" class="button all-caps fat">Start using Major now</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </article>
{% endblock %}
